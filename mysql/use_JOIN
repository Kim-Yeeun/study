
/* 게시글 별로 달린 댓글의 수(COMMENT TABLE의 ID 개수)와 NOTICE TABLE 을  LEFT OUTER JOIN */
CREATE VIEW NOTICE_VIEW
AS
SELECT N.ID, N.TITLE, N.REGDATE, N.WRITER_ID, N.HIT, N.FILES, COUNT(C.ID) CMT_COUNT
FROM NOTICE N
LEFT OUTER JOIN COMMENT C ON N.ID = C.NOTICE_ID
GROUP BY N.ID, N.TITLE, N.REGDATE, N.WRITER_ID, N.HIT, N.FILES;


